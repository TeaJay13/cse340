<h1><%= title %></h1>

<%- messages() %>
<div id="login-form">
     <form action="/account/login" method="POST">
         <label for="account_email">Email:</label>
         <input type="email" id="account_email" name="account_email" required>

         <label for="account_password">Password:</label>
         <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
         <input type="password" name="account_password" id="accountPassword" 
          required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

         <button type="submit">Login</button>
     </form>
</div>

 <p>Don't have an account? <a href="/account/register">Register here</a></p>
